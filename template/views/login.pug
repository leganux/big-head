doctype html
head
    meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    // Primary Meta Tags
    title Big-Head UI - Sign in
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='title' content='Big-Head UI - Sign in')
    meta(name='author' content='Angel Erick Cruz')
    link(rel='canonical' href='https://leganux.com')
    each val in Assets.css
        link(type='text/css' href=val rel='stylesheet')


main
    // Section
    section.min-vh-100.d-flex.bg-primary.align-items-center
        .container
            .row.justify-content-center
                .col-12.col-md-8.col-lg-6.justify-content-center
                    .card.bg-primary.shadow-soft.border-light.p-4
                        .card-header.text-center.pb-0
                            h2.h4 Sign in to Big-Head Control Panel
                            img.img-fluid.rounded(src="/public/images/cabezon.jpg")
                        .card-body
                            form.mt-4(action='#')
                                // Form
                                .form-group
                                    label(for='exampleInputIcon3') Your user
                                    .input-group.mb-4
                                        .input-group-prepend
                                            span.input-group-text
                                                span.fas.fa-user-alt
                                        input#exampleInputIcon3.form-control(placeholder='user' type='text' aria-label='user')
                                // End of Form
                                .form-group
                                    // Form
                                    .form-group
                                        label(for='exampleInputPassword6') Password
                                        .input-group.mb-4
                                            .input-group-prepend
                                                span.input-group-text
                                                    span.fas.fa-unlock-alt
                                            input#exampleInputPassword6.form-control(placeholder='Password' type='password' aria-label='Password' required='')
                                    // End of Form
                                    //.d-block.d-sm-flex.justify-content-between.align-items-center.mb-4
                                        .form-check
                                            input#defaultCheck5.form-check-input(type='checkbox' value='')
                                            label.form-check-label(for='defaultCheck5')
                                                | Remember me
                                        div
                                            a.small.text-right(href='#') Lost password?
                                button.btn.btn-block.btn-primary(type='submit') Sign in
                                center
                                    | Leganux (c) 2021-2022 All rights reserved
                                    br
                                    a(href="https://leganux.net" target="_blank") Leganux.net
                                    br
                                    a(href="https://demo.themesberg.com/neumorphism-ui/" target="_blank") Neumorphism template
                            //.mt-3.mb-4.text-center
                                span.font-weight-normal or login with
                            //.btn-wrapper.my-4.text-center
                                button.btn.btn-primary.btn-icon-only.text-facebook.mr-2(type='button' aria-label='facebook button' title='facebook button')
                                    span.fab.fa-facebook-f(aria-hidden='true')
                                button.btn.btn-primary.btn-icon-only.text-twitter.mr-2(type='button' aria-label='twitter button' title='twitter button')
                                    span.fab.fa-twitter(aria-hidden='true')
                                button.btn.btn-primary.btn-icon-only.text-facebook(type='button' aria-label='github button' title='github button')
                                    span.fab.fa-github(aria-hidden='true')
                            //.d-block.d-sm-flex.justify-content-center.align-items-center.mt-4
                                span.font-weight-normal
                                    | Not registered?
                                    a.font-weight-bold(href='#') Create account
// Core
each val in Assets.js
    script(src=val)


