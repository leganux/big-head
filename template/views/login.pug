doctype html
head
    meta(http-equiv='Content-Type' content='text/html; charset=utf-8')

    title Big-Head UI - Sign in
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='title' content='Big-Head UI - Sign in')
    meta(name='author' content='Angel Erick Cruz')
    link(rel='canonical' href='https://leganux.com')
    each val in Assets.css
        link(type='text/css' href=val rel='stylesheet')


main

    section.min-vh-100.d-flex.bg-primary.align-items-center
        .container
            .row.justify-content-center
                .col-12.col-md-8.col-lg-6.justify-content-center
                    .card.bg-primary.shadow-soft.border-light.p-4
                        .card-header.text-center.pb-0
                            h2.h4 Sign in to Big-Head Control Panel
                            img.img-fluid.rounded(src="/public/images/cabezon.jpg")
                        .card-body
                            .mt-4

                                .form-group
                                    label(for='user') Your user
                                    .input-group.mb-4
                                        .input-group-prepend
                                            span.input-group-text
                                                span.fas.fa-user-alt
                                        input#user.form-control(placeholder='user' type='text' aria-label='user')

                                .form-group

                                    .form-group
                                        label(for='pass') Password
                                        .input-group.mb-4
                                            .input-group-prepend
                                                span.input-group-text
                                                    span.fas.fa-unlock-alt
                                            input#pass.form-control(placeholder='Password' type='password' aria-label='Password' required='')

                                button.btn.btn-block.btn-primary#login Sign in
                                center
                                    | Leganux (c) 2021-2022 All rights reserved
                                    br
                                    a(href="https://leganux.net" target="_blank") Leganux.net
                                    br
                                    a(href="https://demo.themesberg.com/neumorphism-ui/" target="_blank") Neumorphism template

// Core
each val in Assets.js
    script(src=val)
script(src='/public/core/common.js')
script(src='/public/core/login.js')
script.
    let URI = "!{params.uri}"
    let api_url_base = "!{params.api_url_base}"
    let api_base_path = "!{params.api_base_path}"




